@using Habitat.Identity
@using Habitat.Identity.Repositories
@model Sitecore.Mvc.Presentation.RenderingModel

@{
  var identity = IdentityRepository.Get(Model.Item);
  if (identity == null)
  {
    return;
  }
}
<div class="copyright text-center">
  @Html.Sitecore().Field(Templates.Identity.Fields.Copyright.ToString(), identity)
</div>